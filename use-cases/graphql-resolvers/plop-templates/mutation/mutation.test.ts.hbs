import { dangerousTruncateAll } from 'db/src/maintenances/dangerousTruncateAll';
import { beforeEach, describe, expect, test } from 'vitest';
import { createMockedResolverInfo } from '../../../../../test/create-mocked-resolver-info';
import { generateId } from 'core-domain';
import {
  AuthorizedContext,
  createUserAuthorizedContext,
} from '../../../../../test/create-test-context';
import { assertMutationResult } from '../../../../../test/assert-mutation-result';
import type { {{pascalCase action}}{{pascalCase objName}}SuccessResult } from '../../../../generated/resolvers-types';
import { {{camelCase action}}{{pascalCase objName}} } from '.';

let context: AuthorizedContext;
const info = createMockedResolverInfo();
beforeEach(async () => {
  await dangerousTruncateAll();
  context = await createUserAuthorizedContext();
});

describe('{{camelCase action}}{{pascalCase objName}}', async () => {
  const id = generateId();
  const subject = async () => {
    return await {{camelCase action}}{{pascalCase objName}}(
      {},
      { input: { id } },
      context,
      info
    );
  };
  test('result is success', async () => {
    const response = await subject();
    expect(response.__typename).to.eq('{{pascalCase action}}{{pascalCase objName}}SuccessResult');
    assertMutationResult<{{pascalCase action}}{{pascalCase objName}}SuccessResult>(response);
    expect(response.result).toEqual(
      expect.objectContaining({
        id,
      })
    );
  });
});
