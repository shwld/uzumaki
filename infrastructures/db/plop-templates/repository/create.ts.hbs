import { pipe, tryCatch } from 'core-domain/lib';
import type { Aggregates } from 'core-domain';
import { db, handleError } from '../../lib/db';
import { convertToValidAttributes } from './{{camelCase name}}-record';

export const create: Aggregates['{{camelCase name}}']['create'] = attributes => {
  return pipe(attributes, ({ __state, ...record }) => {
    return tryCatch(
      () =>
        db.{{camelCase name}}
          .create({
            data: {
              ...record,
            },
          })
          .then(convertToValidAttributes),
      handleError
    );
  });
};
