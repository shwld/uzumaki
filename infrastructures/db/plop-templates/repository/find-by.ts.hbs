import { db, handleError } from '../../lib/db';
import { tryCatch } from 'core-domain/lib';
import type { Aggregates } from 'core-domain';
import { convertToValidAttributes } from './{{camelCase name}}-record';

export const findBy: Aggregates['{{camelCase name}}']['findBy'] = args => {
  return tryCatch(
    () =>
      db.{{camelCase name}}
        .findUnique({
          where: {
            id: args.id,
          },
        })
        .then(it => (it == null ? null : convertToValidAttributes(it))),
    handleError
  );
};
